USES
  Crt;

TYPE
Line = RECORD
  A, B, C: REAL;
END;

Point = ARRAY [1..2] OF REAL;
Vector = ARRAY [1..2] OF REAL;
Circle = RECORD
  center: Point;
  radius: REAL;
END;

VAR eps: REAL;

FUNCTION IntLines(VAR a, b: Line; P: Point):BOOLEAN;
VAR
s1, S2, S, q: REAL;
BEGIN
  q := (sqrt(sqr(a.A)+sqr(a.B))*sqrt(sqr(b.A)+sqr(b.B)));
  S := a.A*b.B - a.B*b.A;
  IF q < eps THEN
    IntLines := FALSE
  ELSE
    BEGIN
      IF abs(S/q) < eps THEN
       BEGIN
          {Writeln('прямые не имеют точки пересечения');}
          IntLines := FALSE;
       END
      ELSE
      BEGIN
        s1 := (-a.C*b.B + a.B*b.C)/s;
        s2 := (-a.A*b.C + b.A*a.C)/s;
        P[1] := s1;
        P[2] := s2;
        IntLines := TRUE;
        {WriteLn('координаты точки пересечения  ','(',s1:5:2,',',s2:5:2,')');}
      END;
    END;
END;


VAR
  a,b:Line;
  P:Point;
BEGIN
  eps := 0.0001;
  ClrScr;

  WriteLn();
  a.A:=0;a.B:=1;a.C:=0;
  b.A:=1;b.B:=1;b.C:=-3;
  P[1]:=0;P[2]:=0;

  WriteLn(IntLines(a,b,P));
  WriteLn('координаты точки пересечения  ','(',P[1]:5:2,',',P[2]:5:2,')');


ReadKey;
END.









