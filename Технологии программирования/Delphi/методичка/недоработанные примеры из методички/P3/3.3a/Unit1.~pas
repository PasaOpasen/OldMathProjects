unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    RadioGroup1: TRadioGroup;
    Button1: TButton;
    RadioButton1: TRadioButton;
    RadioButton2: TRadioButton;
    RadioButton3: TRadioButton;
    RadioButton4: TRadioButton;
    Memo1: TMemo;
    Image1: TImage;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
begin
Edit1.Text:='3';
Edit2.Text:='4';
Edit3.Text:='5';
image1.Hide;
Memo1.Clear;
RadioButton1.Checked:=true;
end;

procedure TForm1.Button1Click(Sender: TObject);
var a,b,c,p,h,m,l:real;
begin
  image1.show;
  a:=StrToFloat(Edit1.Text);
  b:=StrToFloat(Edit2.Text);
  c:=StrToFloat(Edit3.Text);
  image1.Canvas.Pen.Width:=3;
  image1.Canvas.MoveTo(110,10);
  Image1.Canvas.LineTo(210,160);
  image1.Canvas.LineTo(10,160);
  Image1.Canvas.LineTo(110,10);
  if RadioButton1.Checked then
    begin
     p:=a+b+c;
     Memo1.Lines.Add('Пириметр равен '+FloatToStrF(p,fffixed,8,3));

    end;
  if RadioButton2.Checked then
   begin
    p:=(a+b+c)/2;
    h:=(2/a)*sqrt(p*(p-a)*(p-b)*(p-c));
    Image1.Canvas.MoveTo(110,10);
    Image1.Canvas.LineTo(110,160);
    //Image1.Canvas.Rectangle(110,160,120,150);

    Image1.Canvas.MoveTo(10,160);
    Image1.Canvas.LineTo(160,85);

    image1.Canvas.MoveTo(210,160);
    Image1.Canvas.LineTo(60,85);
    Memo1.Lines.Add('Длина высоты '+FloatToStrF(h,fffixed,8,3));
   end;
  if RadioButton3.Checked then
   begin
    m:=0.5*sqrt(2*a*a+2*b*b-c*c);
    Memo1.Lines.Add('Длина медианы '+FloatToStrF(m,fffixed,8,3));
    Image1.Canvas.MoveTo(110,10);
    Image1.Canvas.LineTo(110,160);
    //Image1.Canvas.Rectangle(110,160,120,150);

    Image1.Canvas.MoveTo(10,160);
    Image1.Canvas.LineTo(160,85);

    image1.Canvas.MoveTo(210,160);
    Image1.Canvas.LineTo(60,85);
   end;
  if RadioButton4.Checked then
   begin
    l:=sqrt(a*b*(a+b+c)*(a+b-c))/(a+b);
    Memo1.Lines.Add('Длина биссектрис '+FloatToStrF(l,fffixed,8,3));
    Image1.Canvas.MoveTo(110,10);
    Image1.Canvas.LineTo(110,160);
    //Image1.Canvas.Rectangle(110,160,120,150);

    Image1.Canvas.MoveTo(10,160);
    Image1.Canvas.LineTo(160,85);

    image1.Canvas.MoveTo(210,160);
    Image1.Canvas.LineTo(60,85);
   end;
end;

end.
